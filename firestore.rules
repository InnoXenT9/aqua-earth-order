/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model for all user-generated data,
 * ensuring that users can only access and modify their own information. Publicly readable data, such as
 * the restaurant menu, is segregated into a separate top-level collection that is read-only for clients.
 *
 * Data Structure: The data is organized into three main collections:
 * 1. /menuItems/{menuItemId}: A public, read-only collection containing all available menu items.
 * 2. /users/{userId}: A private collection where each document stores a user's profile. Access is
 *    restricted to the authenticated owner of the profile.
 * 3. /users/{userId}/orders/{orderId}: A private subcollection containing a user's order history.
 *    Access inherits the ownership model from the parent user document.
 *
 * Key Security Decisions:
 * - User Data Privacy: All documents and subcollections under /users/{userId} are strictly private
 *   and can only be accessed by the user whose UID matches {userId}.
 * - No User Enumeration: Listing the entire /users collection is disallowed to prevent exposing the
 *   application's user base.
 * - Admin-Managed Content: The /menuItems collection is read-only for all clients. All modifications
 *   (create, update, delete) are denied, with the expectation that this data is managed by server-side
 *   processes using the Admin SDK.
 * - Default Deny: Any access pattern not explicitly granted by these rules is implicitly denied.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user's UID matches the requested document's user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks for ownership on an existing document. Used for safe updates and deletes.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * Validates that a user profile being created has an 'id' field matching the user's auth UID.
     * This enforces relational integrity at the point of creation.
     */
    function isCreatingValidProfile(userId) {
      return isOwner(userId) && request.resource.data.id == userId;
    }

    /**
     * Validates that a user profile's 'id' field is immutable upon update.
     */
    function isUpdatingValidProfile(userId) {
      return isExistingOwner(userId) && request.resource.data.id == resource.data.id;
    }

    /**
     * Validates that an order being created has a 'userId' field matching the user's auth UID.
     * This enforces the ownership link within the document itself.
     */
    function isCreatingValidOrder(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }

    /**
     * Validates that an order's 'userId' field is immutable upon update.
     */
    function isUpdatingValidOrder(userId) {
      return isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
    }


    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    /**
     * @description Controls access to public menu item data.
     * @path /menuItems/{menuItemId}
     * @allow (get) Any user, signed in or not, can read a specific menu item.
     * @deny (create) A client attempts to add a new menu item. This is an admin-only action.
     * @principle Public read access for global data, with writes restricted to server-side processes.
     */
    match /menuItems/{menuItemId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to a user's private profile document.
     * @path /users/{userId}
     * @allow (create) An authenticated user creates their own profile document for the first time.
     * @deny (get) A signed-in user ('user_abc') tries to read the profile of 'user_xyz'.
     * @principle Restricts access to a user's own data tree and prevents user enumeration.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isCreatingValidProfile(userId);
      allow update: if isUpdatingValidProfile(userId);
      allow delete: if isExistingOwner(userId);

      /**
       * @description Controls access to a user's private order history.
       * @path /users/{userId}/orders/{orderId}
       * @allow (create) The owner of the user profile ('user_abc') creates a new order in their own subcollection.
       * @deny (list) A different user ('user_xyz') tries to list the orders of 'user_abc'.
       * @principle Enforces document ownership for all operations, inherited from the parent document path.
       */
      match /orders/{orderId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isCreatingValidOrder(userId);
        allow update: if isUpdatingValidOrder(userId);
        allow delete: if isExistingOwner(userId);
      }
    }
  }
}